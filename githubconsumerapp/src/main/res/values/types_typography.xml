<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MyTextBold" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MyTextMedium.ItemUserUsername">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTextBold.ErrorText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextMedium.ErrorDescriptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>